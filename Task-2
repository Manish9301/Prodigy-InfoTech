      background: rgba(0, 255, 255, 0.1);
      border-radius: 8px;
      border-left: 3px solid #00ffff;
      animation: lapSlideIn 0.5s ease-out;
    }

    @keyframes lapSlideIn {
      from {
        opacity: 0;
        transform: translateX(-20px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .stats {
      margin-top: 30px;
      text-align: left;
      font-size: 1.1rem;
