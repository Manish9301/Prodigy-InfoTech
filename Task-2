      text-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
    }

    @keyframes titleGlow {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }

    #display {
      font-family: 'Orbitron', monospace;
      font-size: 4rem;
