      max-width: 400px;
      margin-left: auto;
      margin-right: auto;
    }

    .score-item.player-x .score-value {
      color: #ff6b6b;
      text-shadow: 0 0 10px #ff6b6b;
    }

    .score-item.player-o .score-value {
      color: #4ecdc4;
      text-shadow: 0 0 10px #4ecdc4;
    }

    .score-item {
      text-align: center;
    }

    .score-label {
